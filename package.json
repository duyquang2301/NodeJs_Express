{
  "name": "cicd",
  "version": "1.0.0",
  "description": "Node.js project with TypeScript, Express.js, ESLint, Prettier, ts-node, nodemon and package.json environment specific scripts.",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run server",
    "server": "node -r dotenv/config dist/server.js",
    "build": "npm run clean && npm run build-ts",
    "dev": "nodemon src/index.ts",
    "fix": "run-s fix:*",
    "fix:format": "prettier --cache --write '**/*.{ts,json,yml,yaml,md}'",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma migrate dev",
    "fix:lint": "eslint --cache --max-warnings 0 --fix **/*.{ts,tsx}",
    "prettier": "prettier --check .",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "clean": "rimraf ./build",
    "prettier:fix": "prettier --write .",
    "validate": "run-p validate:*",
    "validate:format": "prettier --cache -c '**/*.{ts,json,yml,yaml,md}'",
    "validate:lint": "eslint --cache --max-warnings 0 **/*.ts",
    "validate:tsc": "tsc --noEmit",
    "validate:tsc:watch": "tsc --watch",
    "config:local": "cp ./.env.local .env",
    "config:stg": "cp ./.env.stg .env",
    "config:prd": "cp ./.env.prd .env",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@prisma/client": "5.11.0",
    "@tsconfig/strictest": "2.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "6.18.1",
    "@typescript-eslint/parser": "6.20.0",
    "aspida": "1.14.0",
    "cors": "^2.8.5",
    "cspell": "8.6.1",
    "dotenv": "^16.4.5",
    "eslint": "8.56.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-strict-dependencies": "1.3.4",
    "eslint-plugin-unused-imports": "3.0.0",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "npm-check-updates": "16.14.17",
    "npm-run-all": "4.1.5",
    "openapi2aspida": "0.23.2",
    "prettier": "3.2.2",
    "prisma": "5.11.0",
    "typescript": "5.3.3"
  }
}
